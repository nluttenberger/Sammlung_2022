    <fr:recipeName>Polenta mit Balsamico-Gemüse</fr:recipeName>
    <fr:recipeKeywords>Polenta,Balsamico,Spinat,Schalotten</fr:recipeKeywords>
    <fr:recipeIntro>
        <fr:introText>Saures Gemüse – auch nicht schlecht!</fr:introText>
    </fr:recipeIntro>
    <fr:recipeIngredients>
        <fr:igdtList>
            <fr:igdtListName>Schalotten</fr:igdtListName>
            <fr:igdtListLine>
                <fr:igdtQuantity>200 g</fr:igdtQuantity>
                <fr:igdtName ref="schalotten">Schalotten, möglichst klein</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>1 EL</fr:igdtQuantity>
                <fr:igdtName ref="zucker">Zucker</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>80 ml</fr:igdtQuantity>
                <fr:igdtName ref="balsamico">Aceto balsamico</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>100 ml</fr:igdtQuantity>
                <fr:igdtName ref="">Wasser</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>2</fr:igdtQuantity>
                <fr:igdtName ref="lorbeer">Lorbeerblätter</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>1 TL</fr:igdtQuantity>
                <fr:igdtName ref="stärke">Speisestärke</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity/>
                <fr:igdtName ref="">Salz, Pfeffer</fr:igdtName>
            </fr:igdtListLine>
        </fr:igdtList>
        <fr:igdtList>
            <fr:igdtListName>Polenta</fr:igdtListName>
            <fr:igdtListLine>
                <fr:igdtQuantity>100 ml</fr:igdtQuantity>
                <fr:igdtName ref="sahne">Schlagsahne</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>100 ml</fr:igdtQuantity>
                <fr:igdtName ref="milch">Milch</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>100 g</fr:igdtQuantity>
                <fr:igdtName ref="polenta">Polenta</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>2</fr:igdtQuantity>
                <fr:igdtName ref="knoblauch">Knoblauchzehen</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>50 g</fr:igdtQuantity>
                <fr:igdtName ref="parmesan">Parmesan</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity/>
                <fr:igdtName ref="">Salz, Pfeffer</fr:igdtName>
            </fr:igdtListLine>
        </fr:igdtList>
        <fr:igdtList>
            <fr:igdtListName>Spinat</fr:igdtListName>
            <fr:igdtListLine>
                <fr:igdtQuantity>300 g</fr:igdtQuantity>
                <fr:igdtName ref="spinat">Baby-Spinat</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>2</fr:igdtQuantity>
                <fr:igdtName ref="tomate">Tomaten</fr:igdtName>
            </fr:igdtListLine>
