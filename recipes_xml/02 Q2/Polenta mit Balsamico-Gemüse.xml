            <fr:igdtListLine>
                <fr:igdtQuantity>1</fr:igdtQuantity>
                <fr:igdtName ref="knoblauch">Knoblauchzehe</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
